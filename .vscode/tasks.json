{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "clang++",
    "isShellCommand": true,
    "args": ["-std=c++11"],
    "showOutput": "always",
    "tasks": [{
            "taskName": "Debug",
            "args": [
                "src/*", "-g"
            ]
        },
        {
            "taskName": "Release",
            "args": [
                "src/*", "-o webserver"
            ]
        },
        {
            "taskName": "Tests",
            "args": [
                "test/*"
            ]
        }
    ]
}